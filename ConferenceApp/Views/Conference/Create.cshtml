@model ConferenceApp.Models.Conference

@{
    ViewData["Title"] = "Nueva Conferencia";
}

<h1>Crear Conferencia</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nombre de la Conferencia</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Descripci√≥n de la Conferencia</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <input type="hidden" asp-for="OrganizerId" value=@ViewBag.currentUserId/>
            
        </form>
    </div>
</div>

<div>
    <a href='javascript:history.go(-1)'>Volver</a>
    <a asp-action="Details" asp-route-id="1">Volver a Conferencia</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
