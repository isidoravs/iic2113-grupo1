@model ConferenceApp.Models.ConferenceVersion

@{
    ViewData["Title"] = "Editar Versiones";
}

<h1>Editar Version de Conferencia</h1>

<h4>Version de Conferencia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Number" class="control-label">Número de Conferencia</label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Fecha de Inicio</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label">Fecha de Termino</label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventCentreId" class="control-label">Centro de Eventos</label>
                <select asp-for="EventCentreId" class ="form-control" asp-items="ViewBag.eventCentres"></select>
                <span asp-validation-for="EventCentreId" class="text-danger"></span>
            </div>
            @Html.HiddenFor(model => model.ConferenceId)
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista de Versiones de esta Conferencias</a>
    <br/>
    <a asp-action="Details" asp-route-id="@Model.Id">Volver a esta versión de Conferencia</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
