@model ConferenceApp.Models.Room

@{
    ViewData["Title"] = "Nueva Sala";
}

<h1>Agregar nueva sala</h1>

<h4>Info</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxCapacity" class="control-label">Capacidad m√°xima</label>
                <input asp-for="MaxCapacity" class="form-control" />
                <span asp-validation-for="MaxCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EquipmentDescription" class="control-label">Equipamiento</label>
                <input asp-for="EquipmentDescription" class="form-control" />
                <span asp-validation-for="EquipmentDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventCentreId" class="control-label">Centro de evento</label>
                <select asp-for="EventCentreId" class ="form-control" asp-items="ViewBag.EventCentres"></select>
                <span asp-validation-for="EventCentreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a todas las salas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
